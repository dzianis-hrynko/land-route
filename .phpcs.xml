<?xml version="1.0"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="PSR12" xsi:noNamespaceSchemaLocation="../../../phpcs.xsd">
    <description>The DealTrak coding standard (based on PSR-12).</description>
    <arg name="tab-width" value="4"/>

    <!-- Include the whole PSR-12 standard -->
    <rule ref="PSR12"/>

    <!-- All files MUST declare strict types. -->
    <rule ref="Generic.PHP.RequireStrictTypes"/>
</ruleset>
